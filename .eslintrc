{
  "env": {
    "node": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "blockBindings": true,
    "templateStrings": true
  },
  "rules": {
    "new-cap": 1,
    "curly": [2, "multi-line"],
    "indent": [2, 2],
    "brace-style": [2, "1tbs"],
    "comma-style": [2, "last"],
    "default-case": 2,
    "func-style": [2, "declaration"],
    "guard-for-in": 0,
    "no-floating-decimal": 2,
    "no-mixed-requires": 0,
    "no-nested-ternary": 2,
    "no-shadow": 0,
    "no-undef": 1,
    "no-underscore-dangle": 0,
    "no-unused-vars": [1, { "vars": "local", "args": "after-used" }],
    "no-use-before-define": [2, "nofunc"],
    "no-var": 2,
    "quotes": [1, "single"],
    "radix": 2,
    "space-before-function-parentheses": 2,
    "space-after-keywords": [2, "always"],
    "space-before-blocks": 2,
    "spaced-line-comment": [2, "always", { "exceptions": ["-"]}],
    "strict": [2, "global"],
    "valid-jsdoc": [0, { "prefer": { "return": "returns"}}],
    "wrap-iife": [2, "any"]
  }
}
